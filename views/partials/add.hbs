<div class="container">
  <form action="#" method="post">
    <div class="form-group row">
      <div class="">
        <label for="add_note" style="color:#00CC00;">New Note:</label>
        <input type="text" class="form-control" value="" placeholder="Subject" id="add_note">
      </div>
    </div>
    <div class="form-group row">
      <div class="">
        <input type="text" class="form-control" value="" placeholder="Description" id="add_description" />
      </div>
    </div>
    <div class="form-group row">
      <div class="">
        <label for="sel1" style="color: #00CC00;">Note Color:</label>
        <select class="form-control" id="sel1">
          <option value="Blue">Blue</option>
          <option value="Orange">Orange</option>
          <option value="Purple"> Purple</option>
          <option value="Green">Green</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <div class="">
        <input type="button" class="btn btn-primary" id="submit_note" value="Add Note">
      </div>
    </div>
  </form>
</div>
